<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    android:id="@+id/layoutItemServices">
    <View
        android:id="@+id/viewSupporter"
        app:layout_constraintTop_toBottomOf="@+id/imgService"
        android:layout_width="match_parent"
        android:layout_height="15dp"/>
    <View
        android:id="@+id/viewBackground"
        android:background="@drawable/services_background"
        android:paddingBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@id/lblServicio"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
    <com.makeramen.roundedimageview.RoundedImageView
        android:layout_marginStart="15dp"
        android:id="@+id/imgService"
        android:contentDescription="@string/app_name"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:riv_corner_radius="6dp"
        android:layout_width="110dp"
        android:layout_height="152dp"/>
    <TextView
        android:id="@+id/lblServicio"
        android:layout_marginStart="10dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="10dp"
        android:paddingTop="15dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold|normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/imgService"
        app:layout_constraintTop_toTopOf="@id/imgService"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>
    <RatingBar
        android:id="@+id/ratingBar"
        style="@style/Widget.AppCompat.RatingBar.Small"
        android:isIndicator="true"
        android:numStars="5"
        android:theme="@style/RatingBar"
        app:layout_constraintStart_toStartOf="@id/lblServicio"
        app:layout_constraintTop_toBottomOf="@id/lblServicio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/lblDescripcion"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/colorTextSecondary"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@+id/lblServicio"
        app:layout_constraintStart_toEndOf="@+id/lblServicio"
        app:layout_constraintTop_toBottomOf="@+id/ratingBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>